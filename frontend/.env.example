# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# LLM Configuration (Groq)
NEXT_PUBLIC_LLM_MODEL=openai/gpt-oss-120b
GROQ_API_KEY=
GROQ_MODEL=openai/gpt-oss-120b

# Backend API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000

# Mock Mode (for testing without backend)
# Set to "true" to use mock data instead of real API calls
NEXT_PUBLIC_USE_MOCK=false

# MCP Server (for chat tool calling - search/articles tools)
# Run the MCP server with HTTP first: MCP_TRANSPORT=http uv run python -m mcpress
# (default port 8001 to avoid conflict with backend on 8000)
MCP_SERVER_URL=http://localhost:8001/mcp
MCP_SERVER_TRANSPORT=http
